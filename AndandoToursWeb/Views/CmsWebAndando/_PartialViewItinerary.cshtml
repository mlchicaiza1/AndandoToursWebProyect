<div class="modal fade" id="Iitnerario" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Itinerary Page</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <form data-ajax="true" data-ajax-success="SuccessCreateItinerary" data-ajax-failure="FaildCreateItinerary" data-ajax-method="POST"
                      asp-controller="CmsWebAndando" asp-action="CrearItinerario" enctype="multipart/form-data">

                    <div class="form-group row">
                        <input hidden name="IdVista" id="IdVistaItn" />
                        <label class="col-md-3 col-form-label">Name Itinerary</label>
                        <input class="form-control col-md-2" name="ItinNombre" />
                        <div class="col-md-1"></div>
                        <label class="col-md-3 col-form-label">Name Short Itinerary</label>
                        <input class="form-control col-md-2" name="ItinNombreCor" />
                    </div>

                    <div class="form-group row">

                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">Num Details Itiner</label>
                        <input class="form-control col-md-2" name="numItiner" />
                        <div class="col-md-1"></div>

                    </div>
                    <br />
                    <button class="btn btn-primary" value="save" type="submit">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
