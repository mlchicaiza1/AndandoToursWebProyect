    <script type="text/javascript">
        SuccessCreateItinerary = function (xhr) {
            alert('Status: {xhr.status}, Status Text: {xhr.statusText}');
        };

        FaildCreateItinerary = function (xhr) {
            alert(`Status: {xhr.status}, Status Text: {xhr.statusText}`);
        };
    </script>
}



