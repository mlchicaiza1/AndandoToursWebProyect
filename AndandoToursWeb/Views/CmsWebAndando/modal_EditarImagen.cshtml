<div class="modal fade" id="imagenModal" style="overflow:hidden;padding-right:0" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-full" style="width:100%;" role="document">
        <div class="modal-content" style="width:100%; height:100%">
            <div class="modal-header" style="height:60px">
                <img src="~/images/logos/andando-tours-png-azul-horizontal.png" style="width:100px; height:50px; margin-top:-10px; margin-left:0px" />
                <button type="button" class="close-form pull-right" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container style-scroll" style="padding-left:0;overflow-y:scroll;height:500px">
                    <span style="margin:10px 0"><b>Nombre Imagen: {{nombre}}</b></span>
                    <p><b>Tamaño imagen:</b> {{tamanoImg}}</p>
                    <form method="post" asp-controller="CmsWebAndando" asp-action="ImageUploadInsert" enctype="multipart/form-data">
                        <div class="form-group row">
                            <input id="idImage" name="idImage" type="text" hidden value="@ViewBag.id" />
                            <label class="col-sm-2 col-form-label">Image:</label>
                            <div class="col-md-10">
                                <div class="custom-file">
                                    <input type="file" id="files" class="form-control " @@change="onFileSelected" placeholder="buscar" required accept=".jpg" @@change="fileChange" name="files" style="margin:10px 0" />
                                    <label></label>
                                    @*<img :src="nuevaImage" alt="Alternate Text" />*@
                                </div>
                            </div>
                            <input type="text" name="ruta" style="display:none" :value="urlCompleto[0]" />
                            <input type="text" name="nombreDefecto" style="display:none" :value="nombre" />
                            <input type="number" name="idImagen" style="display:none" :value="idImg" />
                            <label class="col-sm-2 col-form-label">Nombre:</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="name" :placeholder="nombre" value="" />
                            </div>
                            <div id="preview" style="padding: 15px;">
                                <img v-if="urlPrev" :src="urlPrev" style="width:100%" />
                            </div>
                            <div class="col-md-12 col-xs-12" style="padding:25px 5px; text-align:center">
                                <input class="h5button" style=" padding: 5px 25px;" type="submit" v-on:click="subirImagen" value="save" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    #preview {
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
    #preview img {
        max-width: 150px;
        max-height: 150px;
    }
</style>