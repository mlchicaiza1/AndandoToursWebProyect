@{
    ViewData["Title"] = "contact";
}
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<link rel="stylesheet" type="text/css" href="~/css/styleAndando.css" />
<link rel="stylesheet" type="text/css" href="~/css/styleAndando03.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" integrity="sha256-PZLhE6wwMbg4AB3d35ZdBF9HD/dI/y4RazA3iRDurss=" crossorigin="anonymous" />
<link href="css/font-awesome.min.css" rel="stylesheet" type="text/css">
<script src="~/js/Forms.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
<div class="container--full-width" style="overflow:hidden; width:100%">
    <div id="myCarousel" class="carousel slide active" aria-hidden="true" data-ride="carousel">
        <div class="carousel-inner" role="listbox" style="background-color:#2c3040;">
            <div class="item active imgen-carousel">
                <div class="fondos-imagen" style="background-image:url(../images/Contact/andando-tours-travel-experts.jpg);">
                    <img src="" alt="sailing Galapagos" class="fondos-imagen" style="background-image:url(../images/Contact/andando-tours-travel-experts.jpg); position:center; height:100%; width:100%;" />
                </div>
                <div class="carousel-caption" style="padding-bottom:45px; top:25%" role="option">
                    <h1 class="font-x2 font-brush font-carousel">
                        <strong>CONTACT US</strong>
                    </h1>
                    <p class="font-x2 " style="font-size:18px; font-family:'BentonSans',sans-serif">
                        <b>Galapagos Travel Experts</b>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="container" id="contact_container">
            <div class="row formato-titulo text-justify textoinfo parrafo" style="font-family:Arial;padding: .5em 1em; color: black !important; background:white;">
                <p>
                    <b>
                        <h2 style="text-align:left">
                            ANDANDO TOURS
                        </h2>
                    </b>
                </p>
            </div>
            <div class="row formato-parrafo text-justify textoinfo parrafo" style="font-family:Arial;padding: .5em 1em; color: black !important; background:white;">
                <p>
                    Moreno Bellido E6-167 and Av. Amazonas. Quito, Ecuador
                </p>
                <p>
                    Phone: +593 23237330
                </p>
            </div>
            <div class="row formato-titulo text-justify textoinfo parrafo" style="        font-family: Arial;
        padding: .5em 1em;
        color: black !important;
        background: white;">
                <p>
                    <b>
                        <h2 style="text-align: left">
                            CALL US M-F 9:00 A.M. – 5:30 P.M. (GMT -5)
                        </h2>
                    </b>
                </p>
            </div>
            <div class="row formato-parrafo text-justify textoinfo parrafo" style="font-family:Arial;padding: .5em 1em; color: black !important; background:white;">
                <p>
                    Monday through Friday: 9:00am to 5:30pm ET
                </p>
                <p>
                    Our US number: +1 833 2632636
                </p>
                <p>
                    Our Quito office: +593 2 323 7330
                </p>
                <p>
                    Or call us by Facebook Messenger.
                </p>
                <p>
                    <a style="color:#398AC9; text-decoration:none" href="https://www.facebook.com/AndandoTours/">
                        https://www.facebook.com/AndandoTours/
                    </a>
                </p>
                <p>
                    For inquiries that are not travel-related, please send submissions via our <a href="mailto:contact@andandotours.com" style="color:#398AC9; text-decoration:none">contact@andandotours.com</a>
                </p>
                <br />
                <p>
                    If you have a question about our trips, please submit your inquiry via the form below:
                </p>
            </div>
            <div class="row formato-parrafo text-justify textoinfo parrafo" style="font-family:Arial;padding: .5em .5em; color: black !important; background:white;">
                <form style="margin-top:-2%">
                    <div class="form-group col-md-6 col-sm-12 col-xs-12" style="">
                        <b>E-mail adress *</b>
                        <input style="font-family:Arial; " class="form-control" type="text" placeholder="Email@email.com" id="email" name="email" required />
                    </div>
                    <div class="form-group col-md-6 col-sm-12 col-xs-12">
                        <b>Name *</b>
                        <input style="font-family:Arial" class="form-control" placeholder="Your Name" type="text" id="nombre" name="nombre" onkeypress="return soloLetras(event);" required />
                        <input type="text" id="taylor" class="form-control" name="taylor" style="display:none" value="Taylor Made" />
                    </div>
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                        <b>More details:*</b>
                        <textarea style="font-family:Arial; max-height:100px" class="form-control textarea-taylor" placeholder="Tell us something more we need to know about your dreamer trip" type="text" id="obser" name="obser"></textarea>
                    </div>
                    <br />
                </form>
                <center style="width:95%">
                    <button onclick="prueba();" style="font-family: Arial;font-size: 16px;padding: 5px 15px" class="h5button">Submit request</button>
                </center>
                <br />
            </div>
            <div class="row formato-parrafo text-justify textoinfo parrafo" style="font-family:Arial;padding: .5em 1em; color: black !important; background:white;">
                <p>
                    We will never share your e-mail address unless you allow us to do.
                </p>
            </div>
        </div>
    </div>
</div>