            document.getElementById("mySidenavMovile").style.width = "0";
        }
        
        function datos() {
            //autorrellenar forms
            var datosForm = JSON.parse(localStorage.getItem('datosTripEmail'));
            if (window.location.pathname == "/thank-you-page-availability/") {
                document.getElementById("emailTrip").setAttribute("value", datosForm.Correo);
                document.getElementById("nombreTrip").setAttribute("value", datosForm.Nombre);
                document.getElementById("travelersEcItin").setAttribute("value", datosForm.NummeroMax);
                document.getElementById("fechaTrip").setAttribute("value", datosForm.SalCodigo);
            }
        }
    </script>
