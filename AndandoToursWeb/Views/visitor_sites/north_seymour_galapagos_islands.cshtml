                                    <input id="act6i" value="@IdVisitorSite.Actividad6VisitorSIte" style="display:none" />
                                    <center><b><a id="act6" style=" font-family:SegoeUI, Segoe UI; color:#656b6f; text-decoration:none"></a></b></center>
